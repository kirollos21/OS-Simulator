CC = gcc
CFLAGS = -Wall -std=c99 -pedantic -g

OBJ = configops.o metadataops.o simulator.o Sim01.o

TARGET = Sim01

$(TARGET): $(OBJ)
	$(CC) $(CFLAGS) -o $(TARGET) $(OBJ)

configops.o: configops.c configops.h
	$(CC) $(CFLAGS) -c configops.c

metadataops.o: metadataops.c metadataops.h
	$(CC) $(CFLAGS) -c metadataops.c

simulator.o: simulator.c simulator.h
	$(CC) $(CFLAGS) -c simulator.c

Sim01.o: Sim01.c configops.h metadataops.h simulator.h
	$(CC) $(CFLAGS) -c Sim01.c

clean:
	rm -f $(OBJ) $(TARGET)
